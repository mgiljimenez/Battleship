    "class MostrarTablero:\n",
    "    \n",
    "    def __init__(self, tablero):\n",
    "        self.tablero = tablero\n",
    "        \n",
    "    def estilo_celda(self, valor):\n",
    "        if valor.strip() == \"\":\n",
    "            return \"background-color: lightgray\"\n",
    "        elif valor.isnumeric():\n",
    "            return \"background-color: lightblue\"\n",
